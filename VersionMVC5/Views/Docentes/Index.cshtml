@model IEnumerable<VersionMVC5.Models.Docente>

@{
    ViewBag.Title = "Index";
}

<h2>Docentes</h2>

<p>
    @Html.ActionLink("Ingresar nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Nombre
        </th>
        <th>
           Direccion
        </th>
        <th>
            Telefono
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom_Docente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dire_Docente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tel_Docente)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_Docente }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ID_Docente }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ID_Docente })
        </td>
    </tr>
}

</table>
