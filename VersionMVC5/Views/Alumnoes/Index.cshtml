@model IEnumerable<VersionMVC5.Models.Alumno>

@{
    ViewBag.Title = "Index";
}

<h2>Alumnos</h2>

<p>
    @Html.ActionLink("Ingresar nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Alumno
        </th>
        <th>
            Direccion
        </th>
        <th>
           Telefono
        </th>
        <th>
           Grupo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom_Alumno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dir_Alumno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tel_Alumno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grp_Alumno)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Alumno }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_Alumno }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Alumno })
        </td>
    </tr>
}

</table>
